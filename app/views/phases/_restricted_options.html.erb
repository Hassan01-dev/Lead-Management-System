<% if !phase.approved %>
  <% if (phase.end_date - Date.current).to_i.negative? %>
    <td><%= link_to 'Expired', phase_approve_path(phase),
        data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
  <% else %>
    <td><%= link_to 'Approve', phase_approve_path(phase),
        data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
  <% end %>
<% else %>
  <td><%= link_to 'Approved', '', class: "btn btn-success" %></td>
<% end %>

<td><%= link_to 'Edit', edit_phase_path(phase), class: "btn btn-secondary" %></td>
<td><%= link_to 'Delete', phase_path(phase),
      method: :delete,
      data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </td>
