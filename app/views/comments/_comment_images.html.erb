<div>
  <% @comment = locals[:comment]%>
  <% if @comment.images.attached? %>
    <ul class="comment_images d-flex">
      <% @comment.images.each do |image| %>
        <li>
          <%= image_tag(image, width: 300) %>
          <%= link_to 'Remove Image', delete_image_path(@comment, image), class: "btn btn-danger" if locals[:edit_method] %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
