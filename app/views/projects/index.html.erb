<h1>Projects</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Project Name</th>
      <th scope="col">Assigned To</th>
    </tr>
    <tr>
  </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <th scope="row">*</th>
        <td><%= project.project_name %></td>
        <td><%= project.user.user_name if project.user_id %></td>
        <% if current_user && (current_user.has_role? :BD) %>
          <%# render 'restricted_options', lead: lead %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
