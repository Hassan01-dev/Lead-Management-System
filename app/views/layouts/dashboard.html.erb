<!DOCTYPE html>
<html>
  <head>
    <title>LeadManagementEngine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>

  <body>
  <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Devsinc</a>
      <%# <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search"> %>
      <ul class="navbar-nav px-3">
        <%# <li class="nav-item text-nowrap">
          <a class="nav-link" href="#">Sign out</a>
        </li> %>
        <% if user_signed_in?%>
          <li class="nav-item text-nowrap">
            <%= link_to 'Edit Profile', edit_user_path(current_user),:class=> "nav-link" %>
          </li>
          <li class="nav-item text-nowrap">
            <%= link_to 'log out', destroy_user_session_path , method: :delete ,:class=> "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item text-nowrap">
            <%= link_to 'login', new_user_session_path, :class => "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <%= render 'dashboard/common_options' %>
            <% if current_user %>
              <p><%= current_user.user_name %></p>
              <%= render 'dashboard/admin_options' if current_user.has_role? :admin %>
              <%= render 'dashboard/BD_options' if current_user.has_role? :BD %>
              <%= render 'dashboard/TM_options' if current_user.has_role? :TM %>
              <%= render 'dashboard/engineer_options' if current_user.has_role? :engineer %>
            <% end %>
          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4"><div class="chartjs-size-monitor" style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
          <%= render 'shared/flash_msg' %>
          <%= yield %>
        </main>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
